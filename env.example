# Configurações de Ambiente

# URL da aplicação
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Configurações do Supabase
NEXT_PUBLIC_SUPABASE_URL=seu_url_do_supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua_chave_anonima_do_supabase

# Configurações de autenticação
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=seu_segredo_seguro_aqui

# Configurações de banco de dados
DATABASE_URL=sua_url_de_conexao_com_banco_de_dados

# Configurações de e-mail (opcional)
EMAIL_SERVER=smtp://usuario:senha@servidor:porta
EMAIL_FROM=nao-responda@seusite.com

# Configurações do Mercado Pago
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY=sua_chave_publica_do_mercado_pago
MERCADO_PAGO_ACCESS_TOKEN=seu_access_token_do_mercado_pago

# Webhook Secret (opcional para desenvolvimento, obrigatório para produção)
# DESENVOLVIMENTO: pode usar qualquer string ou deixar vazio
# PRODUÇÃO: pegar no painel MP ao configurar webhook
MERCADO_PAGO_WEBHOOK_SECRET=meu_secret_de_teste_123

# URL da aplicação (necessária para webhooks em produção)
# Em desenvolvimento pode ficar vazio ou com localhost (webhooks serão desabilitados)
# Em produção deve ser sua URL pública: https://seudominio.com
NEXT_PUBLIC_APP_URL=
